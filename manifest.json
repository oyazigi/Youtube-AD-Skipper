{
    "manifest_version": 3,
    "name": "YazigiAdSkipper",
    "description": "Automatcamente pula os an√∫ncios do youtube quando passam os 5 segundos, icon by: vecteezy",
    "version": "1.0.0",
    "icons": {
        "16":"icon_16.png",
        "48":"icon_48.png",
        "128":"icon_128.png"
    },
    "permissions":[
        "scripting",
        "tabs",
        "activeTab"
    ],
    "content_scripts": [{
        "run_at": "document_start",
        "matches": [ "*://*.youtube.com/*" ],
        "js":["script.js"]
    }]
}